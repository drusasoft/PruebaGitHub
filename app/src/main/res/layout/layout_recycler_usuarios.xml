<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/borde_recycler_personas">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewRecyclesUsuarios"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtRecyclerUsuariosNombreApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:fontFamily="@font/orbitron_black"
                android:textColor="@color/color_texto_recycler"
                android:textAlignment="center"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/txtRecyclerUsuariosEMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:fontFamily="@font/orbitron"
                android:textColor="@color/color_texto_recycler"
                android:textAlignment="center"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>